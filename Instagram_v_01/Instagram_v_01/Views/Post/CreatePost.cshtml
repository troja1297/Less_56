@using Instagram_v_01.Models.PostModels
@model PostViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Post Create</h2>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="width: 400px; border-radius: 15px;  padding: 10px;box-shadow: 0px 3px 18px -1px rgba(0,0,0,0.75); position: absolute; left: 50%; top: 25%; margin-left: -200px;">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data">
            <h4>Создать новый пост</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
            </div>
            <div class="form-group">
                <label asp-for="UserPhoto">Загрузите фото для поста</label>
                <input type="file" asp-for="UserPhoto" class="form-control" required/>
                <span asp-validation-for="UserPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Description", "Описание")
                @Html.TextArea("Description", "", 5, 3, new{@class = "form-control", placeholder = "Дополните ваше фото описанием"})
                @Html.ValidationMessageFor(p => p.Description)
            </div>
            <button type="submit" class="btn btn-default">Опубликовать</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>